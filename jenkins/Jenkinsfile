pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/<your-github-username>/cloud-infra-automation.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flask-app ./app'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                docker stop flask-container || true
                docker rm flask-container || true
                docker run -d --name flask-container -p 5000:5000 flask-app
                '''
            }
        }

        stage('Post-Deployment Verification') {
            steps {
                sh 'curl -f http://localhost:5000 || echo "App not responding!"'
            }
        }
    }

    post {
        success {
            echo '✅ Deployment successful!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}
